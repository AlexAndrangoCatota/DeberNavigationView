        android:label="Nueva Publicación"
        tools:layout="@layout/promociones" />
    <fragment
        android:id="@+id/my_posts"
        android:name="com.example.login_navview.pagos"
        android:label="Mis Publicaciones"
        tools:layout="@layout/pagos" />
    <fragment
        android:id="@+id/favorites"
        android:name="com.example.login_navview.salud"
        android:label="Favoritos"
        tools:layout="@layout/salud" />
    <fragment
        android:id="@+id/shop"
        android:name="com.example.login_navview.ofertas"
        android:label="Tienda"
        tools:layout="@layout/ofertas" />


